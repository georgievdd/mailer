{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "emitDecoratorMetadata": true,  // Enable this
    "experimentalDecorators": true  // Enable this
  }
}
